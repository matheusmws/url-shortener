{
  "name": "url-shortener",
  "version": "0.1.0",
  "description": "Sistema de encurtamento de URLs",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "node scripts/changelog.js",
    "k8s:init": "kubectl apply -f k8s/base/namespace.yaml && kubectl create configmap krakend-config --from-file=krakend/krakend.json -n url-shortener --dry-run=client -o yaml | kubectl apply -f -",
    "k8s:dev": "npm run docker:build && kubectl apply -k k8s/overlays/dev",
    "k8s:prod": "npm run k8s:init && kubectl apply -k k8s/overlays/prod",
    "k8s:delete": "kubectl delete namespace url-shortener",
    "k8s:restart": "npm run k8s:delete && npm run k8s:dev",
    "docker:build": "docker build -t api:latest -f Dockerfile.api . && docker build -t krakend:latest -f Dockerfile.krakend ."
  },
  "dependencies": {
    "@opentelemetry/auto-instrumentations-node": "^0.40.3",
    "@opentelemetry/sdk-node": "^0.46.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "sequelize": "^6.35.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
